<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>

<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="<%= root_path %>">Blog</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="<%= root_path %>">Home <span class="sr-only">(current)</span></a>
      </li>

      <% if user_signed_in? %>
        <li class="nav-item active">
          <a class="nav-link" href="<%= my_posts_path %>">My Posts <span class="sr-only">(current)</span></a>
        </li>
      <% end %>

      <li class="nav-item active">
        <a class="nav-link" href="<%= posts_path %>">All Posts <span class="sr-only">(current)</span></a>
      </li>

      <% if user_signed_in? %>
        <li class="nav-item active">
          <a class="nav-link" href="<%= new_posts_path %>">Create Post <span class="sr-only">(current)</span></a>
        </li>
      <% end %>

    </ul>

    <% if user_signed_in? %>
      <ul class="navbar-nav md-10 mb-2">
        <li class="nav-item active logged-in-user">
          <%#= link_to "Log out", destroy_user_session_path, :method => 'delete' %>
          <h6>Logged in user:
            <span class="badge badge-success mb-2 "><%= current_user.name %></span>
            <span class="badge badge-success mb-2"><%= current_user.email %></span>
          </h6>
          <!--          <div class="badge badge-secondary mb-2">-->
          <!--            <a class="nav-link" href="<%#= destroy_user_session_path %>" data-method="delete">Sign out-->
          <!--              <span class="sr-only">(current)</span>-->
          <!--            </a>-->
          <!--          </div>-->
        </li>

        <li class="nav-item active">
          <div class="badge badge-danger mb-2">
            <a class="nav-link" href="<%= destroy_user_session_path %>" data-method="delete">Sign out
              <span class="sr-only">(current)</span>
            </a>
          </div>
        </li>
      </ul>

    <% else %>
      <%#= link_to "login", new_user_session_path %>
      <ul class="navbar-nav md-10 mb-2">
        <li class="nav-item active badge badge-info">
          <a class="nav-link" href="<%= new_user_session_path %>">Sign in <span class="sr-only">(current)</span></a>
        </li>

        <li class="nav-item active badge badge-success">
          <a class="nav-link" href="<%= new_user_registration_path %>">Sign up
            <span class="sr-only">(current)</span></a>
        </li>
      </ul>
    <% end %>


  </div>
</nav>
<br/>
<div class="container">
  <!--  <p class="notice"><%#= notice %></p>-->
  <!--  <p class="alert"><%#= alert %></p>-->
  <%= yield %>
</div>
</body>
</html>
