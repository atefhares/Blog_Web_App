<% if @comment %>
  <div class="alert alert-danger">
    <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_tag comments_path, method: "post" do %>
  <div class="form-group">
    <%= text_area_tag(:content, nil, placeholder: "Comment...", class: "form-control", rows: 5) %>
  </div>

  <%= hidden_field_tag(:post_id, @post.id) %>
  <%= submit_tag "Post comment", class: "btn btn-success btn-block" %>
<% end %>